<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_root"
    style="@style/Theme.AppCompat.NoActionBar"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_facebook">


        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/regular_space_two"
            android:src="@drawable/dialog_info" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:fontFamily="serif"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/txt_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="13"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-light"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/regular_space_two"
        android:layout_marginRight="@dimen/regular_space_two"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="@dimen/regular_space_two"
        android:background="@drawable/rounded_register_button_selector_transparent_border_blue"
        android:fontFamily="sans-serif"
        android:text="OK"
        android:textColor="@color/blue_facebook"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="@dimen/regular_space_two"
        android:layout_marginRight="@dimen/regular_space_two"
        android:layout_marginLeft="@dimen/regular_space_two"
        android:background="@drawable/rounded_register_button_selector_transparent_border_blue"
        android:fontFamily="sans-serif"
        android:text="@string/txt_cancel"
        android:textColor="@color/blue_facebook"
        android:visibility="gone" />


</LinearLayout>